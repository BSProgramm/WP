<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/shareView">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#03a9f4"
        android:visibility="gone"
        android:id="@+id/screenGame">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/min">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_launcher"
                android:id="@+id/img"
                android:layout_gravity="center_horizontal"/>
            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginBottom="5dp"
                app:cardCornerRadius="20dp"
                app:cardBackgroundColor="#4d882f"
                android:layout_above="@+id/view"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/view3">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="3dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="НАЗВАНИЕ"
                        android:layout_centerHorizontal="true"
                        android:id="@+id/text"
                        android:textColor="#ffd54f"
                        android:layout_gravity="center"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="15dp"
                app:cardBackgroundColor="#03a8f3"
                android:layout_marginLeft="4dp"
                android:layout_marginBottom="20dp"
                android:layout_alignWithParentIfMissing="false"
                android:id="@+id/view"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="3dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="СТАТА"
                    android:id="@+id/stats"
                    android:layout_gravity="center_horizontal"
                    android:textSize="15sp"
                    android:textColor="#ffe082"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/max">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher"
            android:id="@+id/img2"
            android:layout_gravity="center_horizontal" />

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            app:cardBackgroundColor="#4d882f"
            android:layout_above="@+id/view2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="4dp"
            android:layout_marginBottom="5dp"
            android:id="@+id/view4">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="4dp"
                android:paddingTop="4dp"
                android:paddingRight="4dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="НАЗВАНИЕ"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/text2"
                    android:textColor="#ffd54f"
                    android:layout_gravity="center"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="15dp"
            app:cardBackgroundColor="#03a8f3"
            android:layout_marginLeft="4dp"
            android:layout_marginBottom="5dp"
            android:layout_alignWithParentIfMissing="false"
            android:id="@+id/view2"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:visibility="invisible">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="3dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="СТАТА"
                    android:id="@+id/stats2"
                    android:layout_gravity="center_horizontal"
                    android:textSize="15sp"
                    android:textColor="#ffe082"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>

    </RelativeLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        app:srcCompat="@drawable/ribbons"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="28sp"
        android:textStyle="bold"
        android:text="0"
        android:id="@+id/score"
        android:textColor="#fff"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/fab"
        android:layout_centerVertical="true"/>

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:backgroundTint="#fff"
        app:srcCompat="@drawable/versus"
        app:rippleColor="#6b1515"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:id="@+id/fab" />
</RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible"
        android:background="#03a9f4"
        android:id="@+id/screenScore"
        android:gravity="center_vertical">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/clouds"
            android:layout_marginBottom="-10dp"
            android:layout_weight="1"
            android:scaleType="centerCrop"/>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-10dp"
            android:layout_marginRight="-10dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="5dp"
            app:contentPaddingBottom="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    app:srcCompat="@drawable/your_score"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="50sp"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/nowScore"
                    android:text="666"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center_horizontal">
                    <android.support.design.widget.FloatingActionButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_share_black_24dp"
                        android:id="@+id/share"
                        app:backgroundTint="#1565c0"
                        app:rippleColor="#5c6bc0"
                        app:pressedTranslationZ="5dp"
                        android:layout_marginRight="8dp"
                        android:clickable="true" />
                    <android.support.design.widget.FloatingActionButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_autorenew_black_24dp"
                        android:id="@+id/re"
                        app:backgroundTint="#b71c1c"
                        app:rippleColor="#d32f2f"
                        android:clickable="true" />
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/clouds"
            android:layout_marginTop="-10dp"
            android:layout_weight="1"
            android:scaleType="centerCrop"/>
    </LinearLayout>
</LinearLayout>